<div class="flex gap-1 border-b p-2 justify-between items-center">
  <div>
    <h2 class="text-xl font-bold"><%= book.title %></h2>
    <p class="mt-2"><%= h(book.description) %></p>
  </div>
  <div class="flex gap-2">
    <%= link_to "edit", edit_book_path(book), class: "text-sm bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <%= form_with(model: book, method: :delete) do |f| %>
      <%= f.button "delete", class: "text-sm bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    <% end %>
  </div>
</div>
