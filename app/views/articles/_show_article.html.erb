<div class="w-full max-w-2xl mx-auto my-5 p-3">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl text-blue-800"><%= @article.title %></h1>
    <div class="">
      <%= link_to 'Edit',
                  edit_article_path(@article),
                  data: { turbo_frame: 'article', turbo_action: 'advance' },
                  class: 'bg-indigo-500 px-5 py-2 text-xs shadow-xs font-medium tracking-wider  text-indigo-100 rounded-full hover:shadow-2xl hover:bg-indigo-600' %>
    </div>
  </div>

  <div class="mt-5">
    <%= simple_format(@article.content, class: 'mt-5') %>
  </div>
</div>
